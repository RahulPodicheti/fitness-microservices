package com.fitness.activityservice.model;

import java.time.LocalDateTime;
import java.util.Map;

import org.springframework.data.mongodb.core.mapping.Document;

import lombok.AllArgsConstructor;
import lombok.Builder;
import lombok.Data;
import lombok.NoArgsConstructor;

@Data
@Document(collection = "activities")
@Builder
@AllArgsConstructor
@NoArgsConstructor
public class Activity {
	
	private String id;
	private ActivityType type;
	private Integer duration;
	private Integer calariesBurned;
	private Map<String, Object> metrics;
	private LocalDateTime startTime;
	private WALKING,
    RUNNING,
    SWIMMING,
    CYCLING,
    YOGA,
    DANCING,
    HIKING,
    ROWING,
    JUMP_ROPE,
    STRENGTH_TRAINING,
    PILATES,
    CROSSFIT,
    BOXING,
    ZUMBA,
    AEROBICS,
    SKIPPING,
    TREADMILL,
    ELLIPTICAL,
    MEDITATION,
    HIIT,               // High-Intensity Interval Training
    WEIGHTLIFTING,      // Gym activity
    ROCK_CLIMBING,      // Indoor or outdoor climbing
    BODYBUILDING,       // Gym-based muscle building
    POWERLIFTING,       // Heavy lifting activity
    STAIR_CLIMBING,     // Step-based exercise
    FUNCTIONAL_TRAINING 
}
